<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/imagem_memoria"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:background="@color/cinza"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_galeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="normal"
                tools:ignore="RtlHardcoded" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="100dp"
                app:backgroundTint="@color/colorAccent"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Insira o tÃ­tulo"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="16sp"
                    android:imeOptions="actionNext" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/insira_a_descri_o"
                    android:maxLines="10"
                    android:lines="10"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="16sp"
                    android:imeOptions="actionNext" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salvar"
                android:id="@+id/botao_salvar"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/botao_arredondado"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>